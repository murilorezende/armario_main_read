@model Armario42.Models.Anuncio

@{
    ViewData["Title"] = "Criar Anúncio";
}

<h1>Criar Anúncio</h1>

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success">@TempData["MensagemSucesso"]</div>
}
@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger">@TempData["MensagemErro"]</div>
}

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group mb-3">
        <label asp-for="Titulo"></label>
        <input asp-for="Titulo" class="form-control" />
        <span asp-validation-for="Titulo" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Descricao"></label>
        <textarea asp-for="Descricao" class="form-control"></textarea>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label for="Foto">Foto do Anúncio</label>
        <input type="file" name="foto" class="form-control" />
        <small class="form-text text-muted">Formatos suportados: JPG, PNG. Tamanho máximo: 2MB.</small>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Preco"></label>
        <input asp-for="Preco" class="form-control" type="number" step="0.01" min="0.01" />
        <span asp-validation-for="Preco" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Tags"></label>
        <input asp-for="Tags" class="form-control" />
        <span asp-validation-for="Tags" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="StatusAnuncio"></label>
        <select asp-for="StatusAnuncio" class="form-control" asp-items="Html.GetEnumSelectList<Armario42.Models.StatusAnuncio>()"></select>
        <span asp-validation-for="StatusAnuncio" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="LojaId">Loja</label>
        <select asp-for="LojaId" class="form-control" asp-items="ViewBag.Lojas">
            <option value="">Selecione uma loja</option>
        </select>
        <span asp-validation-for="LojaId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
</form>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}