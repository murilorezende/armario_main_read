@model Armario42.Models.Anuncio

@{
    ViewData["Title"] = "Excluir Anúncio";
}

<h1>Excluir Anúncio</h1>

<h3>Tem certeza que deseja excluir este anúncio?</h3>

<dl class="row">
    <dt class="col-sm-2">Título</dt>
    <dd class="col-sm-10">@Model.Titulo</dd>

    <dt class="col-sm-2">Preço</dt>
    <dd class="col-sm-10">R$ @Model.Preco.ToString("F2")</dd>

    <dt class="col-sm-2">Status</dt>
    <dd class="col-sm-10">@Model.StatusAnuncio</dd>

    <dt class="col-sm-2">Foto</dt>
    <dd class="col-sm-10">
        @if (!string.IsNullOrEmpty(Model.Foto))
        {
            <img src="@Model.Foto" width="100" />
        }
    </dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="AnuncioId" />
    <button type="submit" class="btn btn-danger">Excluir</button> |
    <a asp-action="Index">Cancelar</a>
</form>
