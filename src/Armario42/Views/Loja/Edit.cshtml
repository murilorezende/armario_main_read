@model Armario42.Models.Loja

@{
    ViewData["Title"] = "Editar Loja";
}

<h1 class="mt-4 mb-4">Editar Loja</h1>

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger">@TempData["MensagemErro"]</div>
}
@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success">@TempData["MensagemSucesso"]</div>
}

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="LojaId" />
    <input type="hidden" asp-for="UsuarioId" />

    <div class="form-group mb-3">
        <label asp-for="Nome" class="form-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Contato" class="form-label"></label>
        <input asp-for="Contato" class="form-control" />
        <span asp-validation-for="Contato" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Atualizar</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Voltar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}