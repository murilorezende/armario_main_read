@model Armario42.Models.Loja

@{
    ViewData["Title"] = "Criar Loja";
}

<h1>Criar Loja</h1>

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger">
        <h4>Erro:</h4>
        <p>@TempData["MensagemErro"]</p>
    </div>
}
@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success">@TempData["MensagemSucesso"]</div>
}

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group mb-3">
        <label asp-for="Nome">Nome da Loja</label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Contato">Contato</label>
        <input asp-for="Contato" class="form-control" />
        <span asp-validation-for="Contato" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="UsuarioId">Usuário Responsável</label>
        <select asp-for="UsuarioId" class="form-control" asp-items="ViewBag.Usuarios">
            <option value="">Selecione um usuário</option>
        </select>
        <span asp-validation-for="UsuarioId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
</form>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}