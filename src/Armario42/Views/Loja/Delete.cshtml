@model Armario42.Models.Loja

@{
    ViewData["Title"] = "Excluir Loja";
}

<h1 class="mt-4 mb-3 text-danger">Excluir Loja</h1>

<h4 class="mb-4">Tem certeza de que deseja excluir a loja abaixo?</h4>

<div class="card p-4">
    <dl class="row">
        <dt class="col-sm-3">Nome:</dt>
        <dd class="col-sm-9">@Model.Nome</dd>

        <dt class="col-sm-3">Contato:</dt>
        <dd class="col-sm-9">@Model.Contato</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post" class="mt-3">
        <input type="hidden" asp-for="LojaId" />
        <button type="submit" class="btn btn-danger">Confirmar Exclus√£o</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
    </form>
</div>